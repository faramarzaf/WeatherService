<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainPage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    android:orientation="vertical"
    android:padding="@dimen/_5sdp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/cityText"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/Transparent"
            android:hint="@string/hint"
            android:inputType="text"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:textColorHint="#eaeaea"
            android:textSize="@dimen/_16sdp" />

        <ImageView
            android:id="@+id/search_btn"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="center"
            android:src="@drawable/ic_search" />


    </LinearLayout>

    <TextView
        android:id="@+id/resultCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:textColor="#ffffff"
        android:textSize="@dimen/_20sdp" />

    <TextView
        android:id="@+id/resultCountry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:textColor="#ffffff"
        android:textSize="@dimen/_18sdp" />

    <ImageView
        android:id="@+id/image_status"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_70sdp"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/resultStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="@dimen/_20sdp" />


    <TextView
        android:id="@+id/resultTemp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="@dimen/_25sdp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >


        <ImageView
            android:layout_width="@dimen/_38sdp"
            android:layout_height="@dimen/_38sdp"
            android:id="@+id/img_windSpeed"
            android:src="@drawable/wind"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/resultWindSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_5sdp"
            android:textColor="#ffffff"
            android:textSize="@dimen/_15sdp" />


        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_38sdp"
            android:id="@+id/img_humidity"
            android:src="@drawable/humidity"
            android:visibility="invisible"
              />

        <TextView
            android:id="@+id/resultHumidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_3sdp"
            android:textColor="#ffffff"
            android:textSize="@dimen/_15sdp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        >

        <ImageView
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_32sdp"
            android:id="@+id/img_maxTemp"
            android:src="@drawable/max"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/maxTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:textColor="#cacaca"
            android:textSize="@dimen/_15sdp" />

        <ImageView
            android:id="@+id/img_minTemp"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_32sdp"
            android:src="@drawable/min"
            android:visibility="invisible"

            />

        <TextView
            android:id="@+id/minTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:textColor="#cacaca"
            android:textSize="@dimen/_15sdp"

            />

    </LinearLayout>

    <View
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_1sdp"
        android:background="#c6c6c6"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_5sdp"
        android:visibility="invisible"
        android:id="@+id/line"
        />


    <TextView
        android:id="@+id/regionDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="@dimen/_15sdp" />


</LinearLayout>
